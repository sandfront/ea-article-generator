<div style="padding: 20px;">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Title</th>
        <th>Author</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.title, article_path(article) %></td>
          <td><%= link_to article.author, article_path(article) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
